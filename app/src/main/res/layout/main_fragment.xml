<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:custom="http://schemas.android.com/apk/res-auto"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              app:layout_behavior="@string/appbar_scrolling_view_behavior"
              android:id="@+id/layoutMain"
              tools:context="de.slava.schoolaccounting.Main"
              tools:showIn="@layout/activity_main">

    <de.slava.schoolaccounting.room.RoomView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/roomHome"
        custom:roomName="Home"
        android:layout_weight="1"
        android:layout_marginRight="@dimen/activity_divider_padding" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:layout_marginRight="@dimen/activity_divider_padding">

        <de.slava.schoolaccounting.room.RoomView
            android:id="@+id/room011"
            custom:roomName="011"
            android:layout_width="wrap_content"
            android:layout_height="0px"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/activity_divider_padding"
            />
        <de.slava.schoolaccounting.room.RoomView
            android:id="@+id/roomUnknown"
            custom:roomName="\?\?\?"
            android:layout_width="wrap_content"
            android:layout_height="0px"
            android:layout_weight="1" />


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:layout_marginRight="@dimen/activity_divider_padding">

        <de.slava.schoolaccounting.room.RoomView
            android:id="@+id/room017"
            custom:roomName="017"
            android:layout_width="wrap_content"
            android:layout_height="0px"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/activity_divider_padding"
            />
        <de.slava.schoolaccounting.room.RoomView
            android:id="@+id/room018"
            custom:roomName="018"
            android:layout_width="wrap_content"
            android:layout_height="0px"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1.0">

        <de.slava.schoolaccounting.room.RoomView
            android:id="@+id/roomTH"
            custom:roomName="TH"
            android:layout_width="wrap_content"
            android:layout_height="0px"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/activity_divider_padding"/>
        <de.slava.schoolaccounting.room.RoomView
            android:id="@+id/roomHof"
            custom:roomName="Pausenhof"
            android:layout_width="wrap_content"
            android:layout_height="0px"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>